<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="navbar-container">
        <div class="navbar">
          <div class="navbar-action">
            <%= link_to "Home", "/", method: :get %>
          </div>
          <div class="navbar-action">
            <%= link_to "Projects", "/projects", method: :get %>
          </div>
          <div class="navbar-action">
            <%= link_to "Blog", "/posts", method: :get %>
          </div>
        </div>
      </div>
      <div class="content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
